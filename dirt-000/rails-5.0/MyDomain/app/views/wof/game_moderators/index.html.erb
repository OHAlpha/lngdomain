<p id="notice"><%= notice %></p>

<h1>Wof Game Moderators</h1>

<table>
  <thead>
    <tr>
      <th>Game</th>
      <th>User</th>
      <th>Role</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @wof_game_moderators.each do |wof_game_moderator| %>
      <tr>
        <td><%= wof_game_moderator.game %></td>
        <td><%= wof_game_moderator.user %></td>
        <td><%= wof_game_moderator.role %></td>
        <td><%= link_to 'Show', wof_game_moderator %></td>
        <td><%= link_to 'Edit', edit_wof_game_moderator_path(wof_game_moderator) %></td>
        <td><%= link_to 'Destroy', wof_game_moderator, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

